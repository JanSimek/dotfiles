[global]
    font = Share Tech Bold 10
    # close all notifications
    close_all = mod4+n

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the '#' and following  would be interpreted as a comment.
    background = "#dedede"
    foreground = "#EF2929"
    timeout = 10

[urgency_normal]
    background = "#dedede"
    foreground = "#EF2929"
    timeout = 10

[urgency_critical]
    background = "#333333"
    foreground = "#EF2929"
    timeout = 0

